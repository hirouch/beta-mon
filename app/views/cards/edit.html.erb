    <h3>Edit Card</h3>
    <%= form_tag("/cards/" +@card.id.to_s, :method=>:patch) do %>
        <div class="form-group">
            <%= label_tag "form-title","Title" %>
            <%= text_field :cards, :title, id:"form-title" , class:"form-control",value: @card.question %>
        </div>
        <div class="form-group">
            <%= label_tag "form-content","Content" %>
            <%= text_field :cards, :body, id:"form-content" , class:"form-control",value: @card.answer %>
        </div>
        <%= submit_tag "Update" ,class:"btn btn-primary"%>
    <% end %>