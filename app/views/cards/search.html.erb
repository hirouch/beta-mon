    <% @cards.each.with_index do |card,i| %>
      <div class="col-sm-12">
            <div class="panel panel-info	">

              <div class="panel-heading">
                <h4>
                  <a data-toggle="collapse" href="#<%= i %>"><%= card.question %></a>
                </h4>
              </div>
              
              <div id="<%= i %>" class="panel-collapse collapse">

                <div class="panel-body">
                  <%= card.answer %>
                </div>

                <div class="panel-footer">
                  <a href="/cards/<%=card.id%>/rankup"><span class="glyphicon glyphicon-ok"></span></a>
                  <a href="/cards/<%=card.id%>/rankdown"><span class="glyphicon glyphicon-remove"></span></a>
                  <% if user_signed_in? && current_user.id == card.user_id %>
                    <div class="buttons">
                      <a href="/posts/<%=card.id%>/edit"><span class="glyphicon glyphicon-star"></span></a>
                      <a href="/posts/<%=card.id%>/edit"><span class="glyphicon glyphicon-edit"></span></a>
                      <a href="/posts/<%=card.id%>" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
                    </div>
                  <% end %>
                </div>
                
              </div>
            </div>
        </div>
    <% end %>
    <%= link_to 'エクスポート', cards_index_path(format: :csv), class: 'btn btn-primary mb-5' %>

    <%= paginate(@cards) %>